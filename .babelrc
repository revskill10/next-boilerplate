{
  "env": {
    "development": {
      "presets": ["next/babel"],
      "plugins": [
        "import-graphql",
        "graphql-tag",
        [
          "babel-plugin-styled-components", 
          {
            "ssr": true, 
            "displayName": true, 
            "preprocess": false 
          }
        ]
      ]
    },
    "production": {
      "presets": ["next/babel"],
      "plugins": [
        "import-graphql",
        "graphql-tag"
      ]
    },
    "test": {
      "presets": [["next/babel", { 
        "preset-env": { 
          "modules": "commonjs" 
        } 
      }]],
      "plugins": [
        "import-graphql",
        "graphql-tag",
        [
          "babel-plugin-styled-components", 
          {
            "ssr": true, 
            "displayName": true, 
            "preprocess": false 
          }
        ]
      ]
    }
  }
}
